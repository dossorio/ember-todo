<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">Your Todos</h3>
  </div>
  <div class="panel-body">
    <ul class="list-group">
      {{#each todos as |todo|}}
        <li class="list-group-item">{{todo.id}} - {{todo.description}}</li>
      {{/each}}
    </ul>
    <div class="text-center">
      <button {{action "addTodo"}} class="btn btn-info"><i class="fa fa-plus"></i></button>
    </div>
  </div>
</div>
